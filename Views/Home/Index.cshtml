@{
    ViewBag.Title = "Book Store";
}
<!--bring in model, used to be IQueryable<Book> before tag helper-->
<!--becasue we linked models in the _viewimports we are able to skip the full path and just say booklistviewmodel-->
@model BookListViewModel

<!--to pull from partial view-->
<div class="row">
    @foreach (var x in Model.Books)
    {
        <partial name="BookSummary" model="x" />
    }
</div>

<!--page numbers listed with styling-->
<div page-model="@Model.PagingInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     page-url-classification="@Model.CurrentClassification"
     class="btn-group pull-right m-1">

</div>


